<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.RecheckPasswordFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewPasswordTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="다시 한번 확인해주세요!"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextPasswordRecheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:background="@drawable/row_background"
            android:ems="10"
            android:fontFamily="@font/pretendard_medium"
            android:hint="다시 한번 비밀번호 입력하기"
            android:inputType="text"
            android:paddingHorizontal="17dp"
            android:paddingVertical="10dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textViewWrongPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="아까와 다른 비밀번호에요. 작성 내용을 다시 체크해주세요."
            android:textColor="#FFFF5454"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonReRegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/main_color"
        android:text="비밀번호 다시 설정하기"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/onboarding_button_color"
        android:fontFamily="@font/pretendard_medium"
        android:text="다음으로"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>